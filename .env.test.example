# =====================================================
# CONFIGURACIÓN DE TESTING LOCAL
# =====================================================
# Copiar este archivo a .env.test y configurar con tus credenciales

# Environment
NODE_ENV=test
HOST=localhost
PORT=3001

# Database (Local MySQL - TEST)
# IMPORTANTE: Usar una base de datos separada para tests
DATABASE_URL=mysql://root:your_password@localhost:3306/academias_db_test

# JWT Configuration (Testing)
JWT_SECRET=test_secret_key_minimum_32_characters_long_for_testing
JWT_REFRESH_SECRET=test_refresh_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=/api/v1

# CORS
CORS_ORIGIN=http://localhost:5173

# Security (valores más bajos para tests rápidos)
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000
BODY_LIMIT=10mb

# Logging
LOG_LEVEL=error

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads/test
