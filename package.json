{
  "name": "sga-p-backend",
  "version": "1.0.0",
  "description": "Sistema de Gestión Integral para Academias Preuniversitarias (SGA-P) - Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "node scripts/conditional-migrate.js && npx prisma generate",
    "postinstall": "npx prisma generate",
    "deploy": "npx prisma migrate deploy && npx prisma generate",
    "pretest": "node scripts/check-test-env.js",
    "test": "jest --runInBand",
    "test:unit": "jest tests/unit --runInBand --forceExit",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:setup": "node scripts/setup-test-db.js",
    "test:reset": "dotenv -e .env.test -- npx prisma migrate reset --force",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "seed": "node prisma/seed.js",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:validate": "npx prisma validate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json}\"",
    "format:check": "prettier --check \"**/*.{js,json}\"",
    "ci": "npm run lint && npm run format:check && npm run build && npm run test:coverage",
    "ci:local": "npm run lint && npm run format:check && npx prisma validate && npm run build && npm test"
  },
  "keywords": [
    "sga-p",
    "academias-preuniversitarias",
    "educación-perú",
    "gestión-académica",
    "tutorías",
    "roles"
  ],
  "author": "Equipo SGA-P",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3",
    "prisma": "^6.19.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
