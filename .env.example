# =====================================================
# CONFIGURACIÓN DE DESARROLLO LOCAL
# =====================================================

# Environment
NODE_ENV=development
HOST=localhost
PORT=3000

# Database (Local MySQL)
DATABASE_URL=mysql://root:your_password@localhost:3306/academias_db

# JWT Configuration
# Genera tus propios secrets con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_token_secret_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=/api/v1

# CORS (Local Frontend)
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
BODY_LIMIT=10mb

# Logging
LOG_LEVEL=debug

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

